{
  "testCaseId": "TC_003",
  "testCaseName": "Revenue Calculation Negative Test - Invalid Input Validation",
  "testSuite": "Revenue_WGS_CSBD",
  "priority": "Medium",
  "testType": "Smoke",
  "description": "Verify system behavior with invalid input data for revenue calculation",
  "preconditions": [
    "User is logged into the system",
    "Revenue calculation module is accessible",
    "Error handling is properly configured"
  ],
  "testData": {
    "revenueInputs": {
      "baseAmount": -500.00,
      "taxRate": 1.25,
      "discountPercentage": -0.05,
      "currency": "INVALID",
      "region": ""
    },
    "expectedOutputs": {
      "errorMessages": [
        "Base amount cannot be negative",
        "Tax rate cannot exceed 100%",
        "Discount percentage cannot be negative",
        "Invalid currency code",
        "Region is required"
      ],
      "validationStatus": "Failed",
      "calculationAllowed": false
    }
  },
  "testSteps": [
    {
      "stepNumber": 1,
      "action": "Navigate to revenue calculation page",
      "expectedResult": "Revenue calculation form is displayed"
    },
    {
      "stepNumber": 2,
      "action": "Enter negative base amount: -500.00",
      "expectedResult": "Error message displayed: Base amount cannot be negative"
    },
    {
      "stepNumber": 3,
      "action": "Enter invalid tax rate: 125%",
      "expectedResult": "Error message displayed: Tax rate cannot exceed 100%"
    },
    {
      "stepNumber": 4,
      "action": "Enter negative discount: -5%",
      "expectedResult": "Error message displayed: Discount percentage cannot be negative"
    },
    {
      "stepNumber": 5,
      "action": "Enter invalid currency: INVALID",
      "expectedResult": "Error message displayed: Invalid currency code"
    },
    {
      "stepNumber": 6,
      "action": "Leave region field empty",
      "expectedResult": "Error message displayed: Region is required"
    },
    {
      "stepNumber": 7,
      "action": "Click calculate button",
      "expectedResult": "Calculation is blocked and all validation errors are displayed"
    }
  ],
